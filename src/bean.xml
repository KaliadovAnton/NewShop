<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean name="orderGoodService" class="com.mmalaenko.service.OrderGoodService">
        <constructor-arg ref="orderGoodRepository"/>
    </bean>
    <bean name="orderService" class="com.mmalaenko.service.OrderService">
        <constructor-arg ref="orderRepository"/>
    </bean>
    <bean name="productService" class="com.mmalaenko.service.ProductService">
        <constructor-arg ref="productRepository"/>
    </bean>
    <bean name="userService" class="com.mmalaenko.service.UserService">
        <constructor-arg ref="userRepository"/>
    </bean>
    <bean name="orderGoodRepository" class="com.mmalaenko.repository.OrderGoodRepository">
    </bean>
    <bean name="orderRepository" class="com.mmalaenko.repository.OrderRepository">
    </bean>
    <bean name="productRepository" class="com.mmalaenko.repository.ProductRepository">
    </bean>
    <bean name="userRepository" class="com.mmalaenko.repository.UserRepository">
    </bean>
</beans>